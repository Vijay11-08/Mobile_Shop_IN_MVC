@model IEnumerable<MobileShopInMVC.Models.Review>
@{
    ViewBag.Title = "All Reviews";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";

}
<h2>All Reviews</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Message</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var review in Model)
        {
            <tr>
                <td>@review.Name</td>
                <td>@review.Email</td>
                <td>@review.Message</td>
                <td>@review.CreatedAt.ToShortDateString()</td>
                <td>
                    <a asp-action="Details" asp-route-id="@review.Id" class="btn btn-info btn-sm">View</a>
                    <a asp-action="Edit" asp-route-id="@review.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@review.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

