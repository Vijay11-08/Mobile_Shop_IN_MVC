@using System.Security.Claims
@{
    var userName = User.Identity.IsAuthenticated ? User.Identity.Name : "Admin";
}
@{
    var userRole = User.FindFirst(ClaimTypes.Role)?.Value;
}

@if (userRole == "Admin")
{
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MobileShopInMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MobileShopInMVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <style>
        footer {
            background-color: #5a3c39;
            color: white;
            padding: 40px 0;
            font-family: Arial, sans-serif;
        }

        .footer-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            max-width: 1200px;
            margin: auto;
            padding: 0 40px;
        }

        .newsletter {
            flex: 1;
            min-width: 300px;
            margin-bottom: 20px;
        }

            .newsletter h3 {
                font-size: 20px;
                font-weight: bold;
            }

            .newsletter p {
                font-size: 14px;
                margin: 10px 0;
            }

        .email-box {
            display: flex;
            margin-top: 10px;
        }

            .email-box input {
                flex: 1;
                padding: 12px;
                border: none;
                border-radius: 5px 0 0 5px;
                font-size: 14px;
            }

            .email-box button {
                background-color: #ff7f50;
                border: none;
                color: white;
                padding: 12px 20px;
                cursor: pointer;
                border-radius: 0 5px 5px 0;
                font-size: 14px;
                font-weight: bold;
            }

        .footer-links {
            display: flex;
            flex: 2;
            justify-content: space-between;
            flex-wrap: wrap;
        }

        .column {
            min-width: 180px;
            margin-bottom: 20px;
        }

            .column h4 {
                font-size: 16px;
                font-weight: bold;
                margin-bottom: 10px;
            }

            .column ul {
                list-style: none;
                padding: 0;
            }

                .column ul li {
                    margin-bottom: 8px;
                }

                    .column ul li a {
                        color: white;
                        text-decoration: none;
                        font-size: 14px;
                        transition: 0.3s;
                    }

                        .column ul li a:hover {
                            text-decoration: underline;
                            color: #ff7f50;
                        }

        .social-icons {
            font-size: 1.5rem; /* Icon size */
            color: #fff; /* Default icon color */
            transition: color 0.3s ease; /* Smooth hover effect */
        }

            .social-icons:hover {
                color: #007bff; /* Change color on hover (e.g., blue) */
            }

        .social-icons-container {
            display: flex;
            justify-content: center; /* Center-align icons */
            gap: 15px; /* Spacing between icons */
            margin-top: 15px; /* Add spacing above the icons */
            list-style: none; /* Remove default bullet points */
            padding: 0; /* Remove default padding */
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MobileShopInMVC</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                      
                        <!-- First Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="productsDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                Buy
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="productsDropdown">
                                <li><a class="dropdown-item" asp-controller="User" asp-action="BuyIphone">Buy Iphone</a></li>
                                <li><a class="dropdown-item" asp-controller="User" asp-action="BuySamsung">Buy Samsung</a></li>
                                <li><a class="dropdown-item" asp-controller="User" asp-action="BuyAndroid">Buy Android</a></li>
                                <li><a class="dropdown-item" asp-controller="User" asp-action="BuyIpad">Buy Ipad</a></li>
                                <li><a class="dropdown-item" asp-controller="User" asp-action="BuySmartwatch">Buy Smartwatch</a></li>
                                <li><a class="dropdown-item" asp-controller="User" asp-action="BuyAccessroies">Buy Accessroies</a></li>
                                <li><a class="dropdown-item" asp-controller="User" asp-action="Clearance">Clearance</a></li>

                            </ul>
                        </li>

                        <!-- Second Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="servicesDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                Sell
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="servicesDropdown">
                                <li><a class="dropdown-item" asp-controller="Sell" asp-action="SellIphone">SellIphone</a></li>
                                <li><a class="dropdown-item" asp-controller="Sell" asp-action="SellSamsung">SellSamsung</a></li>
                                <li><a class="dropdown-item" asp-controller="Sell" asp-action="SellIpad">SellIpad</a></li>
                                <li><a class="dropdown-item" asp-controller="Sell" asp-action="SellAndroid">SellAndroid</a></li>
                                <li><a class="dropdown-item" asp-controller="Sell" asp-action="SellSmartwatch">SellSmartwatch</a></li>
                                <li><a class="dropdown-item" asp-controller="Sell" asp-action="SellOtheritem">SellOtheritem</a></li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Sell" asp-action="Sell">Sell Page</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Else" asp-action="SellInBulk">Sell in Bulk</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">Product

                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Buy">
                                Buy
                            </a>
                        </li>




                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="repairDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">More</a>
                            <ul class="dropdown-menu" aria-labelledby="repairDropdown">
                                <li><a class="dropdown-item" asp-controller="More" asp-action="HowItWorks">How It Works</a></li>
                                <li><a class="dropdown-item" asp-controller="More" asp-action="AboutUs">About Us</a></li>
                                <li><a class="dropdown-item" asp-controller="More" asp-action="ContactUs">Contact Us</a></li>
                                <li><a class="dropdown-item" asp-controller="More" asp-action="FAQs">FAQs</a></li>
                            </ul>
                        </li>
                    </ul>

                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-dark">Welcome, @userName!</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Payment" asp-action="Index">Cart</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer>
        <div class="footer-container">
            <div class="newsletter">
                <h3>Enter Email For Deals!</h3>
                <p>Get offers and updates right from your inbox</p>
                <div class="email-box">
                    <input type="email" placeholder="Enter your email address">
                    <button>Subscribe</button>
                </div>
            </div>
            <div class="footer-links">
                <div class="column">
                    <h4>SERVICES</h4>
                    <ul>
                        <li><a href="#">In-Store</a></li>
                        <li><a href="#">Gift Cards</a></li>
                        <li><a href="#">Repair & Tech</a></li>
                        <li><a href="#">Trade-In</a></li>
                        <li><a href="#">All Access</a></li>
                        <li><a href="#">FAQ</a></li>
                    </ul>
                </div>
                <div class="column">
                    <h4>COMPANY</h4>
                    <ul>
                        <li><a href="#">About Us</a></li>
                        <li><a href="#">Careers</a></li>
                        <li><a href="#">Contact Us</a></li>
                        <li><a href="#">Store Locations</a></li>
                    </ul>
                </div>
                <div class="column">
                    <h4>INFORMATION</h4>
                    <ul>
                        <li><a href="#">Blog</a></li>
                        <li><a href="#">FAQs</a></li>
                        <li><a href="#">Privacy Policy</a></li>
                        <li><a href="#">Terms & Conditions</a></li>
                    </ul>
                </div>
                <div class="social-icons">
                    <h4>Follow Us</h4>
                    <div class="icons">
                        <ul class="social-icons-container">
                            <li><a href="#" class="fa fa-facebook social-icons"></a></li>
                            <li><a href="#" class="fa fa-twitter social-icons"></a></li>
                            <li><a href="https://www.linkedin.com/in/vijay-otaradi-678427266/" class="fa fa-linkedin social-icons"></a></li>
                            <li><a href="https://www.instagram.com/like_zone_mobile_shop/" class="fa fa-instagram social-icons"></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </footer>



    <!-- Add Font Awesome for icons -->
    <script src="https://kit.fontawesome.com/YOUR-KIT-ID.js" crossorigin="anonymous"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>



