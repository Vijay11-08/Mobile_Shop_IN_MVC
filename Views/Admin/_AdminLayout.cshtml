<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        /* Simple Neon Theme for Admin Panel */

        /* General Styles */
        body {
            background-color: #121212;
            color: #fff;
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
        }

        /* Sidebar Navigation */
        .sidebar {
            width: 250px;
            height: 100vh;
            background: #1e1e1e;
            padding: 20px;
            position: fixed;
            left: 0;
            top: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            box-shadow: 0px 0px 10px rgba(0, 255, 255, 0.2);
        }

            .sidebar h1 {
                font-size: 22px;
                font-weight: bold;
                text-shadow: 0 0 5px #00ffff;
            }

            .sidebar ul {
                list-style: none;
                padding: 0;
                width: 100%;
                margin-top: 20px;
            }

                .sidebar ul li {
                    width: 100%;
                    margin: 10px 0;
                    text-align: center;
                }

                    .sidebar ul li a {
                        text-decoration: none;
                        color: #fff;
                        font-size: 16px;
                        display: block;
                        padding: 10px;
                        border-radius: 5px;
                        transition: 0.3s;
                        background: rgba(255, 255, 255, 0.1);
                    }

                        .sidebar ul li a:hover {
                            background: #00ffff;
                            color: #000;
                            box-shadow: 0 0 10px #00ffff;
                        }

        /* Main Content */
        .main-content {
            margin-left: 270px;
            padding: 20px;
            width: calc(100% - 270px);
        }

        /* Admin Panel Table */
        .table-container {
            width: 100%;
            overflow-x: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 255, 255, 0.2);
            overflow: hidden;
        }

        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        th {
            background: #00ffff;
            color: #000;
            text-shadow: 0 0 5px #000;
        }

        tr:hover {
            background: rgba(255, 255, 255, 0.1);
        }

        /* Buttons */
        .btn {
            padding: 8px 16px;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            transition: 0.3s;
            font-size: 14px;
        }

        .btn-edit {
            background: #00ff99;
            color: #000;
        }

        .btn-delete {
            background: #ff4444;
            color: #fff;
        }

        .btn:hover {
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.3);
        }

        /* Footer */
        footer {
            margin-top: 20px;
            padding: 10px;
            text-align: center;
            color: #fff;
            font-size: 14px;
            text-shadow: 0 0 5px #00ffff;
        }


    </style>
</head>
<body>
    <div class="sidebar">
        <h1>Admin Panel</h1>
        <ul>
            <li><a href="@Url.Action("Dashboard", "Admin")">Dashboard</a></li>
            <li><a href="@Url.Action("ManageUsers", "Admin")">Manage Users</a></li>
            <li><a href="@Url.Action("ManageProducts", "Admin")">Manage Products</a></li>
            <li><a href="@Url.Action("ManageOrders", "Admin")">ManageOrders</a></li>
            <li><a href="@Url.Action("ManageOrderDetails", "Admin")">ManageOrderDetails</a></li>
            <li><a href="@Url.Action("ManagePayments", "Admin")">Manage Payments</a></li>
            <li><a href="@Url.Action("ViewCart", "Admin")">ViewCart</a></li>

            <li><a href="@Url.Action("AddCategory", "Category")">Add Categoires</a></li>
            <li><a href="@Url.Action("AddProduct", "Admin")">Add Product</a></li>

          

            <li><a href="@Url.Action("Logout", "Account")">Logout</a></li>
        </ul>
    </div>

    <div class="main-content">
        <main>
            @RenderBody()
        </main>

        <footer>
            <p>&copy; 2025 Mobile Shop - Admin Panel</p>
        </footer>
    </div>
</body>
</html>
