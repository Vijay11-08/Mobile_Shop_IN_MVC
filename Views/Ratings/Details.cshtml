@model MobileShopInMVC.Models.Ratings
@{
    ViewData["Title"] = "Rating Details";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}
<style>
    .card-header {
        background-color: #17a2b8;
        color: white;
    }

    .card-body {
        background-color: #f8f9fa;
        font-size: 1.1rem;
    }

    .btn {
        padding: 10px 20px;
        border-radius: 5px;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

    .mb-3 p {
        font-size: 1.1rem;
        line-height: 1.6;
    }
</style>

<div class="container mt-4">
    <div class="card shadow-lg rounded-4">
        <div class="card-header bg-info text-white text-center">
            <h3 class="mb-0">🌟 Rating Details</h3>
        </div>
        <div class="card-body p-4">
            <div class="mb-3">
                <p>
                    <strong>⭐ Stars:</strong>
                    @for (int i = 0; i < Model.Stars; i++)
                    {
                        <span>⭐</span>
                    }
                </p>
                <p><strong>📝 Feedback:</strong> @Model.Feedback</p>
                <p><strong>📅 Submitted At:</strong> @Model.CreatedAt.ToString("f")</p>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
