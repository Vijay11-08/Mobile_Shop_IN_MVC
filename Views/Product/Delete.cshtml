@model MobileShopInMVC.Models.Product
@{
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}
<style>
    /* General Reset */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    /* Body styling */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f8f9fa;
        color: #333;
    }

    /* Main container */
    .container {
        max-width: 800px;
        margin: 50px auto;
        background-color: #fff;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    /* Heading */
    h2 {
        font-size: 2.5em;
        color: #dc3545;
        text-align: center;
        margin-bottom: 20px;
    }

    /* Subheading */
    h3 {
        font-size: 1.5em;
        color: #495057;
        margin-bottom: 30px;
        text-align: center;
    }

    /* Product Details */
    div {
        font-size: 1.1em;
        margin-bottom: 20px;
        color: #495057;
    }

    strong {
        color: #007bff;
    }

    /* Image display */
    img {
        border-radius: 8px;
        margin-top: 10px;
        border: 2px solid #007bff;
    }

    /* Button styling */
    button,
    a.btn {
        display: inline-block;
        font-size: 1.1em;
        padding: 12px 30px;
        border-radius: 5px;
        cursor: pointer;
        text-align: center;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

        /* Delete button */
        button[type="submit"] {
            background-color: #dc3545;
            border: none;
            color: white;
        }

            button[type="submit"]:hover {
                background-color: #c82333;
            }

    /* Cancel button */
    a.btn-secondary {
        background-color: #6c757d;
        color: white;
        border: none;
        margin-left: 15px;
    }

        a.btn-secondary:hover {
            background-color: #5a6268;
        }

    /* Responsive Design */
    @@media screen and (max-width: 768px) {
        .container

    {
        padding: 20px;
        margin: 20px;
    }

    h2 {
        font-size: 2em;
    }

    h3 {
        font-size: 1.2em;
    }

    button, a.btn {
        font-size: 1em;
    }

    div {
        font-size: 1em;
    }

    }
</style>
<h2>Delete Product</h2>

<h3>Are you sure you want to delete this product?</h3>

<div>
    <strong>Name:</strong> @Model.Name
</div>

<div>
    <strong>Photo:</strong><br />
    @if (!string.IsNullOrEmpty(Model.Photo))
    {
        <img src="~/uploads/@Model.Photo" width="100" height="100" />
    }
</div>

<div>
    <strong>Description:</strong> @Model.Description
</div>

<div>
    <strong>Price:</strong> @Model.Price
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>