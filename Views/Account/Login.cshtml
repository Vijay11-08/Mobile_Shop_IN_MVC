@model MobileShopInMVC.Models.Register;
@{
    ViewData["Title"] = "Login";
}

<h2 class="text-center">Login</h2>

<style>
    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .login-box {
        background: #f8f9fa;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        width: 350px;
    }

        .login-box label {
            font-weight: bold;
            margin-top: 10px;
        }

        .login-box input {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
            border: 1px solid #ced4da;
            border-radius: 5px;
        }

        .login-box button {
            width: 100%;
            background: #d26c1a;
            color: white;
            border: none;
            padding: 10px;
            margin-top: 20px;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
        }

            .login-box button:hover {
                background: #b55a14;
            }

    .remember-forgot {
        display: flex;
        justify-content: space-between;
        margin-top: 10px;
    }

        .remember-forgot a {
            text-decoration: none;
            color: #007bff;
        }

            .remember-forgot a:hover {
                text-decoration: underline;
            }
</style>

<div class="login-container">
    <div class="login-box">
        <form method="post" action="/Account/Login">
            <label>Email:</label>
            <input type="email" name="Email" required />

            <label>Password:</label>
            <input type="password" name="Password" required />

            <div class="remember-forgot">
                <a href="/Account/ForgotPassword">Forgot Password?</a>
            </div>

            <button type="submit">Login</button>
        </form>
    </div>
</div>
