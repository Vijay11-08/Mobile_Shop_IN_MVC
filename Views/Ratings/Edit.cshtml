@model MobileShopInMVC.Models.Ratings
@{
    ViewData["Title"] = "Edit Rating";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";

}

<h2>Edit Rating</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Stars"></label>
        <select asp-for="Stars" class="form-control">
            <option value="1">⭐</option>
            <option value="2">⭐⭐</option>
            <option value="3">⭐⭐⭐</option>
            <option value="4">⭐⭐⭐⭐</option>
            <option value="5">⭐⭐⭐⭐⭐</option>
        </select>
        <span asp-validation-for="Stars" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Feedback"></label>
        <textarea asp-for="Feedback" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Feedback" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
