@{
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}
@model List<MobileShopInMVC.Models.Cart>

<h2>Your Cart</h2>

@if (Model.Count == 0)
{
    <p>Your cart is empty.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Cart ID</th>
                <th>Product ID</th>
                <th>Quantity</th>
                <th>Total Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CartId</td>
                    <td>@item.ProductId</td>
                    <td>@item.Quantity</td>
                    <td>@item.TotalPrice</td>
                </tr>
            }
        </tbody>
    </table>
}

