@{
    ViewData["Title"] = "Checkout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Basic Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* Body styling */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            color: #333;
        }

        /* Container styling */
        .container {
            background-color: #fff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            max-width: 800px;
            margin: 50px auto;
        }

        /* Heading styling */
        h2 {
            font-size: 2.5em;
            color: #007bff; /* Blue color for the title */
            margin-bottom: 15px;
            text-align: center;
        }

        /* Paragraph styling */
        p {
            font-size: 1.1em;
            color: #555;
            margin-bottom: 30px;
            text-align: center;
        }

        /* Table styling */
        .table {
            width: 100%;
            margin-bottom: 20px;
        }

            .table th, .table td {
                padding: 12px;
                text-align: left;
                border-top: 1px solid #ddd;
            }

            .table thead {
                background-color: #007bff;
                color: white;
            }

            .table tbody tr:nth-child(odd) {
                background-color: #f9f9f9;
            }

            .table tbody tr:hover {
                background-color: #f1f1f1;
            }

        /* Total section styling */
        .d-flex {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 30px;
        }

            .d-flex h4 {
                font-size: 1.5em;
                color: #007bff;
            }

        .btn-primary {
            background-color: #007bff;
            border: none;
            color: white;
            padding: 12px 20px;
            font-size: 1.1em;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        /* Empty cart message */
        p {
            font-size: 1.2em;
            color: #dc3545; /* Red color for the empty cart message */
            text-align: center;
        }

        /* Stripe script and button */
        #stripe-button {
            width: 100%;
            display: flex;
            justify-content: center;
            margin-top: 30px;
        }

        /* Responsive Design */
        @@media screen and (max-width: 768px) {
            .container

        {
            padding: 20px;
            margin: 20px;
        }

        h2 {
            font-size: 2em;
        }

        .d-flex h4 {
            font-size: 1.3em;
        }

        .btn-primary {
            font-size: 1em;
        }

        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2>Checkout</h2>
        <p>Review your order before proceeding with payment.</p>

        @if (Model != null && Model.Count > 0)
        {
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ProductName</td>
                                <td>@item.Quantity</td>
                                <td>₹@item.Price</td>
                                <td>₹@(item.Quantity * item.Price)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="d-flex justify-content-between">
                <h4>Total: ₹@ViewData["Total"]</h4> <!-- Display the total here -->
                <form method="post" action="/Product/Checkout">
                    <button type="submit" class="btn btn-primary">Proceed to Payment</button>
                </form>
            </div>

        }
        else
        {
            <p>Your cart is empty. Please add items to your cart before proceeding.</p>
        }
    </div>

    <script src="https://js.stripe.com/v3/"></script>
    <script>
        const stripe = Stripe('@ViewData["StripePublishableKey"]'); // Accessing the value from ViewData
    </script>

    <script>
        document.querySelector('form').addEventListener('submit', async (event) => {
            event.preventDefault();

            const { sessionId } = await fetch('/Product/Checkout', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    cartItems: @Html.Raw(Json.Serialize(Model)) // Passing cart items as JSON to server
                })
            }).then(res => res.json());

            const { error } = await stripe.redirectToCheckout({ sessionId });
            if (error) {
                alert(error.message);
            }
        });
    </script>
</body>
</html>
