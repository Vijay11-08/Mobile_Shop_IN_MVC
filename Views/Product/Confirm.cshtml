@model MobileShopInMVC.Models.BuyerViewModel
<style>
    /* Basic Reset */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    /* Body styling */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f4f7fc;
        color: #333;
    }

    /* Container for the order summary */
    .container {
        background-color: #fff;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        margin: 50px auto;
    }

    /* Heading styling */
    h2 {
        font-size: 2.5em;
        color: #007bff;
        margin-bottom: 20px;
        text-align: center;
    }

    /* Paragraph styling */
    p {
        font-size: 1.1em;
        color: #555;
        margin-bottom: 15px;
    }

    strong {
        color: #007bff; /* Highlight strong text with blue */
    }

    /* Form Styling */
    form {
        display: flex;
        flex-direction: column;
        gap: 20px;
        margin-top: 30px;
    }

    input[type="hidden"] {
        display: none;
    }

    /* Button Styling */
    .btn-primary {
        background-color: #007bff;
        border: none;
        color: white;
        padding: 12px 20px;
        font-size: 1.1em;
        border-radius: 5px;
        cursor: pointer;
        text-align: center;
        transition: background-color 0.3s ease;
        width: 100%;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .btn-success {
        background-color: #28a745;
        border: none;
        color: white;
        padding: 12px 20px;
        font-size: 1.1em;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        text-align: center;
        width: 100%;
        display: block;
        margin-top: 10px;
    }

        .btn-success:hover {
            background-color: #218838;
        }

    /* Horizontal Line Styling */
    hr {
        border: 0;
        border-top: 2px solid #ddd;
        margin: 30px 0;
    }

    /* Responsive Design */
    @@media screen and (max-width: 768px) {
        .container

    {
        padding: 20px;
        margin: 20px;
    }

    h2 {
        font-size: 2em;
    }

    .btn-primary, .btn-success {
        font-size: 1em;
    }

    }
</style>

<h2>Order Summary</h2>

<p><strong>Product:</strong> @Model.ProductName</p>
<p><strong>Price:</strong> ₹@Model.ProductPrice</p>
<p><strong>Buyer:</strong> @Model.BuyerName</p>
<p><strong>Email:</strong> @Model.BuyerEmail</p>
<p><strong>Address:</strong> @Model.BuyerAddress</p>

<hr />

<form asp-controller="Payment" asp-action="Checkout" method="post">
    <input type="hidden" name="productName" value="@Model.ProductName" />
    <input type="hidden" name="productPrice" value="@Model.ProductPrice" />
    <button type="submit" class="btn btn-primary">Pay with Stripe</button>
</form>

<br />
<a asp-action="Index" class="btn btn-success">Back to Products</a>
