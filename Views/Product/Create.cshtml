@model MobileShopInMVC.Models.Product

@{
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
    ViewData["Title"] = "Add Product";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg rounded-4">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">➕ Add New Product</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-semibold">📦 Product Name</label>
                            <input asp-for="Name" class="form-control shadow-sm" placeholder="Enter product name" required />
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhotoFile" class="form-label fw-semibold">🖼️ Upload Product Image</label>
                            <input asp-for="PhotoFile" type="file" class="form-control shadow-sm" accept="image/*" required />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label fw-semibold">📝 Description</label>
                            <textarea asp-for="Description" class="form-control shadow-sm" rows="4" placeholder="Enter product description"></textarea>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label fw-semibold">💰 Price (in ₹)</label>
                            <input asp-for="Price" class="form-control shadow-sm" type="number" min="0" step="any" placeholder="Enter price" required />
                        </div>

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-success px-5 py-2 fw-semibold">💾 Save Product</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
