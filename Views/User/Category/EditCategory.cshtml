@model MobileShopInMVC.Models.Category

@{
    ViewData["Title"] = "Edit Category";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h2>Edit Category</h2>

<form method="post" action="/Admin/EditCategory" enctype="multipart/form-data">
    <input type="hidden" name="Id" value="@Model.Id" />

    <label>Name:</label>
    <input type="text" name="Name" value="@Model.Name" required />

    <label>Description:</label>
    <textarea name="Description" required>@Model.Description</textarea>

    <label>Current Image:</label>
    <img src="@Model.ImageUrl" alt="Category Image" width="100" />

    <label>Upload New Image:</label>
    <input type="file" name="ImageUrl" />

    <button type="submit">Update Category</button>
</form>
