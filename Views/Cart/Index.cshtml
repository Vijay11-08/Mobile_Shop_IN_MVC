@model IEnumerable<MobileShopInMVC.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<h2>Available Products</h2>

<table class="table">
    <thead>
        <tr>
            <th>Photo</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(product.Photo))
                    {
                        <img src="~/uploads/@product.Photo" alt="Product Image" width="100" height="100" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>₹@product.Price</td>
                <td>
                    <a asp-action="Buy" asp-route-id="@product.Id" class="btn btn-success">Buy Now</a>
                </td>
            </tr>
        }
    </tbody>
</table>
