<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        /* Sidebar */
        .sidebar {
            width: 250px;
            height: 100vh;
            background: #343a40;
            padding-top: 20px;
            position: fixed;
            left: 0;
            top: 0;
        }

            .sidebar a {
                display: block;
                padding: 10px;
                color: white;
                text-decoration: none;
                transition: 0.3s;
            }

                .sidebar a:hover {
                    background: #17a2b8;
                }

            .sidebar h1 {
                text-align: center;
                color: #fff;
                font-size: 20px;
                margin-bottom: 20px;
            }

        /* Main Content */
        .main-content {
            margin-left: 250px;
            padding: 20px;
        }

        /* Table */
        table {
            background: white;
        }

        th {
            background: #007bff;
            color: white;
        }

        /* Buttons */
        .btn-edit {
            background: #28a745;
            color: white;
        }

        .btn-delete {
            background: #dc3545;
            color: white;
        }

        .btn:hover {
            opacity: 0.8;
        }

        /* Footer */
        footer {
            text-align: center;
            margin-top: 20px;
            padding: 10px;
            background: #f8f9fa;
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <h1>Admin Panel</h1>
        <a href="@Url.Action("Dashboard", "Admin")">Dashboard</a>

        <a href="@Url.Action("ManageUsers", "Admin")">Manage Users</a>

        <a href="@Url.Action("Index", "Orders")">Manage Orders</a>
       
        <a href="@Url.Action("Create", "Product")">Add Products</a>
        <a href="@Url.Action("Index", "Product")">Manage Products</a>

        <a href="@Url.Action("Create", "Category")">Add Categories</a>
        <a href="@Url.Action("Index", "Category")">Manage Categories</a>

        <a href="@Url.Action("Create", "Ratings")">Add Ratings</a>
        <a href="@Url.Action("Index", "Ratings")">Manage Ratings</a>

     
        <a href="@Url.Action("Logout", "Account")">Logout</a>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <main>
            @RenderBody()
        </main>

        <footer>
            <p>&copy; 2025 Mobile Shop - Admin Panel</p>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
