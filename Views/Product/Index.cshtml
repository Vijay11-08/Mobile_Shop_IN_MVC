@model IEnumerable<MobileShopInMVC.Models.Product>
@{
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h2 class="mb-4 text-center">Product List</h2>

<div class="d-flex justify-content-end mb-3">
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Add New Product
    </a>
</div>

<table class="table table-striped table-hover border rounded shadow">
    <thead class="thead-dark">
        <tr>
            <th>Name</th>
            <th>Photo</th>
            <th>Description</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="align-middle">@item.Name</td>
                <td class="align-middle">
                    @if (!string.IsNullOrEmpty(item.Photo))
                    {
                        <img src="~/uploads/@item.Photo" class="img-thumbnail" width="100" height="100" />
                    }
                    else
                    {
                        <span class="text-muted">No Image</span>
                    }
                </td>
                <td class="align-middle">@item.Description</td>
                <td class="align-middle text-success fw-bold">$@item.Price</td>
                <td class="align-middle">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash-alt"></i> Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
