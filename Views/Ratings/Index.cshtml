@model IEnumerable<MobileShopInMVC.Models.Ratings>
@{
    ViewData["Title"] = "All Ratings";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";

}

<h2>All Ratings</h2>

<table class="table table-bordered">
    <tr>
        <th>Stars</th>
        <th>Feedback</th>
        <th>Date</th>
        <th>Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @for (int i = 0; i < item.Stars; i++)
                {
                    <span>⭐</span>
                }
            </td>
            <td>@item.Feedback</td>
            <td>@item.CreatedAt.ToString("g")</td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">View</a>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
            </td>

        </tr>
    }
</table>
