@using System.Security.Claims
@{
    var userRole = User.FindFirst(ClaimTypes.Role)?.Value;
}

@if (userRole == "Admin")
{
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MobileShopInMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MobileShopInMVC.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MobileShopInMVC</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        <!-- First Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="productsDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                Buy
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="productsDropdown">
                                <li><a class="dropdown-item" asp-controller="User" asp-action="BuyIphone">Buy Iphone</a></li>
                                <li><a class="dropdown-item" asp-controller="User" asp-action="BuySamsung">Buy Samsung</a></li>
                                <li><a class="dropdown-item" asp-controller="User" asp-action="BuyAndroid">Buy Android</a></li>
                                <li><a class="dropdown-item" asp-controller="User" asp-action="BuyIpad">Buy Ipad</a></li>
                                <li><a class="dropdown-item" asp-controller="User" asp-action="BuySmartwatch">Buy Smartwatch</a></li>
                                <li><a class="dropdown-item" asp-controller="User" asp-action="BuyAccessroies">Buy Accessroies</a></li>
                                <li><a class="dropdown-item" asp-controller="User" asp-action="Clearance">Clearance</a></li>

                            </ul>
                        </li>

                        <!-- Second Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="servicesDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                Sell
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="servicesDropdown">
                                <li><a class="dropdown-item" asp-controller="Sell" asp-action="SellIphone">SellIphone</a></li>
                                <li><a class="dropdown-item" asp-controller="Sell" asp-action="SellSamsung">SellSamsung</a></li>
                                <li><a class="dropdown-item" asp-controller="Sell" asp-action="SellIpad">SellIpad</a></li>
                                <li><a class="dropdown-item" asp-controller="Sell" asp-action="SellAndroid">SellAndroid</a></li>
                                <li><a class="dropdown-item" asp-controller="Sell" asp-action="SellSmartwatch">SellSmartwatch</a></li>
                                <li><a class="dropdown-item" asp-controller="Sell" asp-action="SellOtheritem">SellOtheritem</a></li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - MobileShopInMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
