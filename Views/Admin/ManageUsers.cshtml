@model List<MobileShopInMVC.Models.Register>

@{
    ViewData["Title"] = "Manage Users";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}
<style>
    /* General Reset */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    /* Body Styling */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f8f9fa;
        color: #333;
    }

    /* Main container */
    .container {
        max-width: 900px;
        margin: 50px auto;
        background-color: #fff;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    /* Heading */
    h2 {
        font-size: 2.5em;
        color: #007bff;
        text-align: center;
        margin-bottom: 30px;
    }

    /* Table Styles */
    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 15px;
        text-align: left;
        font-size: 1.1em;
    }

    th {
        background-color: #007bff;
        color: white;
        font-weight: bold;
    }

    td {
        background-color: #f8f9fa;
        color: #495057;
        border: 1px solid #ddd;
    }

    tbody tr:hover {
        background-color: #e2e6ea;
        cursor: pointer;
    }

    /* Button Styles */
    .btn {
        display: inline-block;
        padding: 8px 20px;
        font-size: 1em;
        border-radius: 5px;
        text-decoration: none;
        text-align: center;
        transition: all 0.3s ease;
    }

    .btn-sm {
        font-size: 0.9em;
        padding: 6px 12px;
    }

    .btn-warning {
        background-color: #ffc107;
        color: white;
    }

        .btn-warning:hover {
            background-color: #e0a800;
        }

    .btn-danger {
        background-color: #dc3545;
        color: white;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    /* Empty Message */
    .text-muted {
        font-size: 1.1em;
        color: #6c757d;
    }

    /* Responsive Design */
    @@media screen and (max-width: 768px) {
        h2

    {
        font-size: 2em;
    }

    table {
        font-size: 1em;
    }

    th, td {
        padding: 10px;
    }

    .btn {
        font-size: 0.9em;
        padding: 6px 12px;
    }

    }
</style>

<h2 class="text-center my-4">Manage Users</h2>

<div class="container">
    @if (Model != null && Model.Any())
    {
        <table class="table table-bordered table-striped table-hover">
            <thead class="table-primary">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>@user.Role</td>
                        <td>
                            <a href="@Url.Action("EditUser", "Admin", new { id = user.Id })" class="btn btn-sm btn-warning">Edit</a>
                            <a href="@Url.Action("DeleteUser", "Admin", new { id = user.Id })" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted text-center">No users found.</p>
    }
</div>
