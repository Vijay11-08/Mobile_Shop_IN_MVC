@model MobileShopInMVC.Models.Ratings
@{
    ViewData["Title"] = "Submit Rating";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";

}

<h2>Submit Your Rating</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Stars"></label>
        <select asp-for="Stars" class="form-control">
            <option value="1">⭐</option>
            <option value="2">⭐⭐</option>
            <option value="3">⭐⭐⭐</option>
            <option value="4">⭐⭐⭐⭐</option>
            <option value="5">⭐⭐⭐⭐⭐</option>
        </select>
        <span asp-validation-for="Stars" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Feedback"></label>
        <textarea asp-for="Feedback" class="form-control" rows="4"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
