@model IEnumerable<MobileShopInMVC.Models.Ratings>
@{
    ViewData["Title"] = "All Ratings";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}
<style>
    table tr:hover {
        background-color: #f8f9fa;
        transition: background-color 0.3s ease-in-out;
    }

    .table td, .table th {
        vertical-align: middle;
    }
</style>

<div class="container mt-4">
    <div class="card shadow-lg rounded-4">
        <div class="card-header bg-dark text-white text-center">
            <h3 class="mb-0">🌟 All User Ratings</h3>
        </div>
        <div class="card-body p-4">
            <div class="table-responsive">
                <table class="table table-hover align-middle table-bordered border-secondary">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">🌠 Stars</th>
                            <th scope="col">📝 Feedback</th>
                            <th scope="col">📅 Date</th>
                            <th scope="col">⚙️ Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @for (int i = 0; i < item.Stars; i++)
                                    {
                                        <span>⭐</span>
                                    }
                                </td>
                                <td>@item.Feedback</td>
                                <td>@item.CreatedAt.ToString("g")</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm me-1">🔍 View</a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-1">✏️ Edit</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">🗑️ Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
