@model MobileShopInMVC.Models.Register;
@{
    ViewData["Title"] = "Forgot Password";
}

<h2 class="text-center">Forgot Password</h2>

<style>
    .forgot-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .forgot-box {
        background: #f8f9fa;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        width: 350px;
    }

        .forgot-box label {
            font-weight: bold;
            margin-top: 10px;
        }

        .forgot-box input {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
            border: 1px solid #ced4da;
            border-radius: 5px;
        }

        .forgot-box button {
            width: 100%;
            background: #d26c1a;
            color: white;
            border: none;
            padding: 10px;
            margin-top: 20px;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
        }

            .forgot-box button:hover {
                background: #b55a14;
            }

    .back-to-login {
        text-align: center;
        margin-top: 10px;
    }

        .back-to-login a {
            text-decoration: none;
            color: #007bff;
        }

            .back-to-login a:hover {
                text-decoration: underline;
            }
</style>

<div class="forgot-container">
    <div class="forgot-box">
        <form method="post" action="/Account/ForgotPassword">
            <label>Email:</label>
            <input type="email" name="Email" required />

            <button type="submit">Reset Password</button>
        </form>
        <div class="back-to-login">
            <a href="/Account/Login">Back to Login</a>
        </div>
    </div>
</div>
